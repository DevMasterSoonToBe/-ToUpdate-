@model AlausDaryklosGamybosValdymoSistema.Models.GamybosInstrukcija

@{
    ViewData["Title"] = "Create";
}
<h4>Sukurti gamybos instrukciją</h4>
<hr />
<div class="row">
    <div class="col-md-4">
      <form asp-action="Create">
        @{
          var kui = ViewBag.KlientoUzsakymoId;
        }
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group" hidden>
          <label asp-for="KlientoUzsakymoId" class="control-label"></label>
          <input asp-for="@kui" class="form-control" />
        </div>
        <div class="form-group">
          <label asp-for="Busena" class="control-label"></label>
          <select asp-for="Busena" class="form-control">
            <option value="S">Sukurta</option>
          </select>
          <span asp-validation-for="Busena" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="GamybosTerminas" class="control-label"></label>
          <input asp-for="GamybosTerminas" class="form-control" />
          <span asp-validation-for="GamybosTerminas" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="BrandinimoLaikas" class="control-label"></label>
          <input asp-for="BrandinimoLaikas" class="form-control" />
          <span asp-validation-for="BrandinimoLaikas" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="RecepturaParuosta" class="control-label">Receptūra</label>
          <select asp-for="Busena" class="form-control">
            <option value="N">Neparuošta</option>
          </select>
          <span asp-validation-for="RecepturaParuosta" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="TechnikosPatarimaiParuosti" class="control-label">Technikos patarimai</label>
          <select asp-for="Busena" class="form-control">
            <option value="N">Neparuošti</option>
          </select>
          <span asp-validation-for="TechnikosPatarimaiParuosti" class="text-danger"></span>
        </div>
        <div class="form-group">
          <input type="submit" value="Create" class="btn btn-default" />
        </div>
      </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
