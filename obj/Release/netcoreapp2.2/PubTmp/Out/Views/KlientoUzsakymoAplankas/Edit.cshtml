@model AlausDaryklosGamybosValdymoSistema.Models.KlientoUzsakymoAplankas

@{
    ViewData["Title"] = "Edit";
}

<h2>Keisti busena</h2>

<h4>Kliento Uzsakymo Aplankas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KlientoUzsakymoId" />
            <div class="form-group">
                <label asp-for="KlientoId" class="control-label"></label>
                <select asp-for="KlientoId" class="form-control" asp-items="ViewBag.KlientoId"></select>
                <span asp-validation-for="KlientoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Terminas" class="control-label"></label>
                <input asp-for="Terminas" class="form-control" />
                <span asp-validation-for="Terminas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Kliento užsakymo būsena</label>
                <select asp-for="Busena" class="form-control">
                    <option value="A">Archyvuotas</option>
                    <option value="S">Sukurtas</option>
                </select>
                <span asp-validation-for="Busena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
