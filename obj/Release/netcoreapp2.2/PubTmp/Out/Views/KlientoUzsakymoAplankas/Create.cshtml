@model AlausDaryklosGamybosValdymoSistema.Models.KlientoUzsakymoAplankas

@{
    ViewData["Title"] = "Create";
}
<html>
<head>
</head>
<body>
    <header>
        <center><h2>LOGO</h2></center> s
    </header>
    <h3>Sukurti naują kliento užsakymo aplanką</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="KlientoId" class="control-label"></label>
                    <select asp-for="KlientoId" class="form-control" asp-items="ViewBag.KlientoId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Terminas" class="control-label">Iveskite užsakymo terminą</label>
                    <input asp-for="Terminas" class="form-control" />
                    <span asp-validation-for="Terminas" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Busena" class="control-label">Ivesti užsakymo būseną</label>
                    <select asp-for="Busena" class="form-control">
                        <option value="S">Sukurtas</option>
                    </select>
                    <span asp-validation-for="Busena" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Sukurti" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
