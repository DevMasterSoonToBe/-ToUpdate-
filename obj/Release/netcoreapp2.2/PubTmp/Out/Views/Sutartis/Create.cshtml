                <label asp-for="KlientoUzsakymoId" class="control-label"></label>
                <Input asp-for="@kui" class="form-control">
            </div>
            @{
                var ki = ViewBag.KlientoID;
            }
            <div class="form-group" hidden>
                <label asp-for="KlientoId" class="control-label"></label>
                <input asp-for="@ki" class="form-control">
            </div>
            <div class="form-group">
                <label class="control-label">Kliento sutartis(failas)</label>
                <input type="file" name="files" class="form-control" id="files" multiple />
            </div>
