                <label asp-for="SutartiesPasirasymoData" class="control-label"></label>
                <input asp-for="SutartiesPasirasymoData" class="form-control" />
                <span asp-validation-for="SutartiesPasirasymoData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SutartiesTerminas" class="control-label"></label>
                <input asp-for="SutartiesTerminas" class="form-control" />
                <span asp-validation-for="SutartiesTerminas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
</div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
